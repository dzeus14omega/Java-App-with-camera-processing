<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartPage">

    <Button
        android:id="@+id/btn_threshold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="thresh hold adaptive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_faceDetect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Face detection"
        app:layout_constraintEnd_toEndOf="@+id/btn_threshold"
        app:layout_constraintStart_toStartOf="@+id/btn_threshold"
        app:layout_constraintTop_toBottomOf="@+id/btn_threshold" />
</androidx.constraintlayout.widget.ConstraintLayout>